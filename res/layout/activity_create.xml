<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Create Event" 
        android:gravity="center"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:text="Event Name:"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textView2"
        android:text="Title of your event/activity"
        android:textSize="12sp"
        android:ems="10" />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:text="Location:"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textView3"
        android:text="Location/Address of Event"
        android:textSize="12sp"
        android:ems="10" />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:text="Location:"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textView3"
        android:text="Location/Address of Event"
        android:textSize="12sp"
        android:ems="10" />
    
    <TextView
        android:id="@+id/textView4"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
     	android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:text="No. of People:"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:ems="10"
        android:text="1"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_toRightOf="@+id/imageButton1"
        android:src="@android:drawable/arrow_down_float" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/editText4"
        android:src="@android:drawable/arrow_up_float" />
    
    <TextView
        android:id="@+id/textView5"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
     	android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView4"
        android:text="Date:"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:ems="10"
        android:text="6/16/2014"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/textView6"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
     	android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView5"
        android:text="Start Time:"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignRight="@+id/editText4"
        android:layout_toRightOf="@+id/textView6"
        android:ems="10"
        android:text="1:00pm"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/TextView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/editText5"
        android:text="End Time:"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/EditText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView7"
        android:layout_alignBottom="@+id/TextView7"
        android:layout_toRightOf="@+id/TextView7"
        android:ems="10"
        android:text="Optional"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/textView8"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
     	android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView6"
        android:text="Description:"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/EditText7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:ems="10"
        android:text="Enter a description of the event"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/textView9"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
     	android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView8"
        android:text="Recent Events:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView10"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView9"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Chess" />
    <TextView
        android:id="@+id/textView11"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView10"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Softball" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView11"
        android:textSize="15sp"
        android:text="Create and Broadcast Event" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button1"
        android:text="Cancel"
        android:textSize="15sp" />

</RelativeLayout>
