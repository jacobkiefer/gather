<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gatherBlue" 
    android:paddingLeft="@dimen/title_margin"
    android:paddingRight="@dimen/title_margin" >

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/formTitle"
        android:textStyle="bold"
        android:text="Gather" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView"
        android:layout_marginBottom="@dimen/form_margin"
        android:padding="2dp"
        android:textColor="@color/white"
        android:textSize="@dimen/labelText"
        android:text="Email" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/form_margin"
        android:background="@color/white"
        android:textSize="@dimen/editText"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/emailTextView">
        <requestFocus />
    </EditText>
    <TextView
        android:id="@+id/pwTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/emailEditText"
        android:layout_marginBottom="@dimen/form_margin"
        android:padding="2dp"
        android:textSize="@dimen/labelText"
        android:textColor="@color/white"
        android:text="Password" />

    <EditText
        android:id="@+id/pwEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/form_margin"
        android:textSize="@dimen/editText"
        android:layout_below="@+id/pwTextView"
        android:background="@color/white" 
        android:inputType="textPassword"/>

    <CheckBox
        android:id="@+id/loginCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/forgotTextView"
        android:layout_marginBottom="@dimen/form_margin"
        android:textColor="@color/white"
        android:text="Save Login"
        android:checked="true" />
    
     <View
        android:id="@+id/spacer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/loginCheckBox"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2.5dp"
        android:layout_marginRight="2.5dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/loginCheckBox"
        android:layout_toLeftOf="@+id/spacer"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/clickText"
        android:text="Login" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/loginButton"
        android:layout_alignBottom="@+id/loginButton"
        android:layout_toRightOf="@+id/spacer"
        android:padding="2dp"
        android:textSize="@dimen/labelText"
        android:text="or, "
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView01"
        android:layout_toRightOf="@+id/TextView01"
        android:padding="2dp"
        android:textSize="@dimen/clickText"
        android:text="Sign Up For Gather"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/forgotTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pwEditText"
        android:layout_below="@+id/pwEditText"
        android:text="Forgot Your Password?" 
        android:layout_marginBottom="@dimen/form_margin"
        android:textSize="@dimen/labelText"
        android:textColor="@color/white"/>

</RelativeLayout>
